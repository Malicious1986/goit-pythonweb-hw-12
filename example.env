# Example environment variables (sanitized). Do NOT commit secrets.
# Copy to `.env` and fill in real values.

# Postgres
POSTGRES_DB=contacts
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<your_postgres_password>
# Or provide full DB URL
DB_URL=postgresql+asyncpg://<user>:<password>@localhost:5432/contacts

# JWT
JWT_SECRET=<your_jwt_secret_key>
JWT_ALGORITHM=HS256
JWT_EXPIRATION_SECONDS=3600

# Mail
MAIL_USERNAME=<your_smtp_username>
MAIL_PASSWORD=<your_smtp_password>
MAIL_FROM=<from_email@example.com>
MAIL_PORT=465
MAIL_SERVER=<smtp_server>
MAIL_FROM_NAME="Rest API Service"
MAIL_STARTTLS=false
MAIL_SSL_TLS=true
USE_CREDENTIALS=true
VALIDATE_CERTS=true

# Frontend origins (comma-separated)
ORIGINS=http://localhost:3000

# Third-party services
CLOUDINARY_NAME=<cloudinary_name>
CLOUDINARY_API_KEY=<cloudinary_api_key>
CLOUDINARY_API_SECRET=<cloudinary_api_secret>
